<% blog.forEach((blog)=>{ %>
    <section id="create">
        <div class="heading">
            <h1>Create a new blog</h1>
        </div>
        <div class="inside">
            <form action="/edit/<%=blog.id%>?_method=put" method="post">
                <input type="text" name="title" value="<%=blog.title%>">
                <input type="text" name="img_url" value="<%=blog.img_url%>">
                <textarea name="description" id="" cols="100" rows="10"><%=blog.description%></textarea>
                <div class="btn-container">
                    <button class="btn">Submit</button>
                </div>
            </form>
        </div>
    </section>
    <%}) %>